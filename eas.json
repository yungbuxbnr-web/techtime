
{
  "cli": {
    "version": ">= 12.8.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "credentialsSource": "remote",
      "node": "18.20.5",
      "ios": {
        "resourceClass": "m-medium"
      },
      "android": {
        "gradleCommand": ":app:assembleDevelopment --no-daemon --no-parallel --no-configure-on-demand"
      },
      "env": {
        "NODE_ENV": "development",
        "NODE_OPTIONS": "--max-old-space-size=4096",
        "CI": "true",
        "EAS_BUILD": "true",
        "GRADLE_OPTS": "-Dorg.gradle.daemon=false -Dorg.gradle.parallel=false -Dorg.gradle.configureondemand=false"
      }
    },
    "preview": {
      "distribution": "internal",
      "credentialsSource": "remote",
      "node": "18.20.5",
      "ios": {
        "resourceClass": "m-medium"
      },
      "android": {
        "gradleCommand": ":app:assembleRelease --no-daemon --no-parallel --no-configure-on-demand"
      },
      "env": {
        "NODE_ENV": "production",
        "NODE_OPTIONS": "--max-old-space-size=4096",
        "CI": "true",
        "EAS_BUILD": "true",
        "GRADLE_OPTS": "-Dorg.gradle.daemon=false -Dorg.gradle.parallel=false -Dorg.gradle.configureondemand=false"
      }
    },
    "production": {
      "autoIncrement": true,
      "credentialsSource": "remote",
      "node": "18.20.5",
      "ios": {
        "resourceClass": "m-medium",
        "image": "latest"
      },
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease --no-daemon --no-parallel --no-configure-on-demand"
      },
      "env": {
        "NODE_ENV": "production",
        "NODE_OPTIONS": "--max-old-space-size=4096",
        "CI": "true",
        "EAS_BUILD": "true",
        "GRADLE_OPTS": "-Dorg.gradle.daemon=false -Dorg.gradle.parallel=false -Dorg.gradle.configureondemand=false"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "track": "internal"
      }
    }
  }
}
