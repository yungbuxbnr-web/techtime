
# Increase network timeout for slow connections
fetch-timeout=300000
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Use legacy peer deps to avoid conflicts
legacy-peer-deps=true

# Disable strict SSL if behind corporate proxy (uncomment if needed)
# strict-ssl=false

# Increase max sockets for parallel downloads
maxsockets=10

# IMPORTANT: Use hoisted node_modules for Android builds
# This ensures react-native-reanimated can resolve modules correctly during Gradle build
node-linker=hoisted

# Auto-install peers
auto-install-peers=true

# Shamefully hoist to ensure all dependencies are accessible
shamefully-hoist=true
